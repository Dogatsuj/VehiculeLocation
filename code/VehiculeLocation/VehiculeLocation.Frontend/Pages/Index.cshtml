@page
@model IndexModel
@{
    ViewData["Title"] = "VehicleLocation";
}

<link rel="stylesheet" href="~/css/indexCSS/index.css" />
<link href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;500;700&display=swap" rel="stylesheet">

<div class="home-container">
    <div class="main-section">
        <div class="background-section">
            <h1 class="main-heading">Rent a vehicle now !</h1>
            <p class="sub-heading">Or Rent your own vehicle !</p>
            
            <a href="/list" class="btn-primary-custom">
                See rentable vehicles
            </a>
            
            <a href="/rent" class="btn-secondary-custom">
                Rent my vehicle
            </a>
        </div>
    </div>
    
    <div class="header-container">
        <div class="logo-section">
            <img src="https://placehold.co/107x107" alt="Logo" class="logo-img" />
            <span class="logo-text">VehicleLocation</span>
        </div>
        
        <nav>
            <ul class="nav-list">
                <li><a href="/list" class="nav-link">Vehicles list</a></li>
                <li><a href="/rent" class="nav-link">Rent my vehicle</a></li>
            </ul>
        </nav>
    </div>
<div class="text-center">
    <h1>Rent a vehicle now !</h1>
    <button class="btn btn-primary" onclick="location.href='/list'">Rentable vehicles list</button>
</div>
